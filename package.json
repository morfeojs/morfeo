{
  "name": "root",
  "private": true,
  "author": {
    "name": "Mauro Erta",
    "email": "mauro@vlkstudio.com"
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "bootstrap:docs": "yarn bootstrap --scope=@morfeo/app-docs",
    "bootstrap:examples": "yarn bootstrap --scope=@morfeo/example-*",
    "bootstrap:packages": "yarn bootstrap --ignore=@morfeo/{app-*,example-*}",
    "bootstrap:web-extension": "yarn bootstrap --scope=@morfeo/app-web-extension",
    "build": "lerna run build",
    "build:docs": "lerna run build --scope=@morfeo/app-docs",
    "build:packages": "lerna run build --ignore=@morfeo/{app-*,example-*}",
    "build:web-extension": "lerna run build --scope=@morfeo/app-web-extension",
    "clean": "lerna clean --yes",
    "clean:packages": "lerna clean --ignore=@morfeo/{app-*,example-*} --yes",
    "deploy:web-extension": "lerna run deploy --scope=@morfeo/app-web-extension",
    "postversion": "ts-node scripts/version.ts && yarn version:web-extension",
    "postversion:major": "yarn postversion major",
    "postversion:minor": "yarn postversion minor",
    "prepare": "husky install",
    "prettify": "yarn prettify:js && yarn prettify:ts",
    "prettify:js": "prettier --write \"**/*.js\"",
    "prettify:ts": "prettier --write \"**/*.ts\"",
    "publish": "lerna publish from-package --no-verify-access --yes",
    "reset": "yarn clean && yarn bootstrap && yarn build",
    "reset:packages": "yarn clean:packages && yarn && yarn bootstrap:packages && yarn build:packages",
    "start:benchmarks": "lerna run all --scope=@morfeo/app-benchmarks",
    "start:docs": "lerna run start --scope=@morfeo/app-docs",
    "start:react-example": "lerna run start --scope=@morfeo/example-react",
    "start:svelte-example": "lerna run dev --scope=@morfeo/example-svelte",
    "test": "jest --detectOpenHandles",
    "test:ci": "NODE_OPTIONS=--max-old-space-size=8192 yarn test --coverage",
    "test:coverage": "yarn test --coverage",
    "test:watch": "yarn test --watch",
    "version:major": "lerna version major --no-push --no-git-tag-version --conventional-commits",
    "version:minor": "lerna version minor --no-push --no-git-tag-version --conventional-commits",
    "version:patch": "lerna version patch --no-push --no-git-tag-version --conventional-commits",
    "version:web-extension": "ts-node scripts/version-web-extension.ts"
  },
  "dependencies": {
    "csstype": "3.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.71.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-lerna-scopes": "17.4.2",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/glob": "8.0.0",
    "@types/jest": "29.2.5",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "eslint": "8.32.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.32.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "5.2.0",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "lerna": "6.4.1",
    "prettier": "2.8.3",
    "rimraf": "4.1.0",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tslib": "2.4.1",
    "typescript": "4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/morfeojs/morfeo"
  },
  "homepage": "https://morfeo.dev",
  "bugs": {
    "url": "https://github.com/morfeojs/morfeo/issues"
  }
}
